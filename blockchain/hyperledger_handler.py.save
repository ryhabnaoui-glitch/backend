            else:
                output = str(response).strip().lower()
            
            result = output == 'true'
            print(f"ğŸ¯ HAS VOTED RESULT: {result}")
            
            return result
            
        except Exception as e:
            print(f"âŒ CHECK VOTE FAILED: {e}")
