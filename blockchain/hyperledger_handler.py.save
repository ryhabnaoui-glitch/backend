    def _execute_command(self, command: List[str], retries: int = 3, delay: int = 2) -> Dict[str, Any]:
        full_command = ['peer', 'chaincode'] + command
        
        print(f"ğŸ”§ EXECUTING COMMAND: {' '.join(full_command)}")
        print(f"ğŸ”§ Working directory: {self.network_path}")
        print(f"ğŸ”§ Peer address: {self.peer_address}")
        print(f"ğŸ”§ Orderer address: {self.orderer_address}")
        
        for attempt in range(retries):
            try:
                print(f"ğŸ”„ Attempt {attempt + 1}/{retries}: Running peer command...")
                
                result = subprocess.run(
                    full_command,
                    check=True,
                    stdout=subprocess.PIPE,
                    stderr=subprocess.PIPE,
                    text=True,
                    timeout=60,
                    cwd=self.network_path,
                    env=self.fabric_env
                )
                
                print(f"âœ… COMMAND SUCCEEDED!")
                print(f"ğŸ“¤ STDOUT: {result.stdout}")
                if result.stderr:
                    print(f"âš ï¸ STDERR: {result.stderr}")
                
                if result.stdout.strip():
                    try:
                        parsed_result = json.loads(result.stdout.strip())
                        print(f"ğŸ“Š PARSED JSON RESULT: {parsed_result}")
                        return parsed_result
                    except json.JSONDecodeError:
                        print(f"ğŸ“ RAW TEXT RESULT: {result.stdout.strip()}")
                        return {'output': result.stdout.strip(), 'success': True}
                else:
                    print(f"âœ… EMPTY RESPONSE (SUCCESS)")
                    return {'success': True, 'output': 'OK'}
                    
            except subprocess.CalledProcessError as e:
                print(f"âŒ COMMAND FAILED with exit code: {e.returncode}")
                print(f"ğŸ“¤ STDOUT: {e.stdout}")
                print(f"ğŸ“¤ STDERR: {e.stderr}")
                
                if attempt < retries - 1:
                    print(f"â³ Waiting {delay} seconds before retry...")
                    time.sleep(delay)
                else:
                    error_msg = f"Command failed after {retries} attempts: {e.stderr}"
                    print(f"ğŸ’¥ FINAL FAILURE: {error_msg}")
                    raise Exception(error_msg)
                    
            except subprocess.TimeoutExpired as e:
                print(f"â° COMMAND TIMEOUT after 60 seconds")
                if attempt < retries - 1:
                    print(f"â³ Waiting {delay} seconds before retry...")
                    time.sleep(delay)
                else:
                    raise Exception(f"Command timed out after {retries} attempts")
                    
            except Exception as e:
                print(f"âŒ UNEXPECTED ERROR: {e}")
                if attempt < retries - 1:
                    print(f"â³ Waiting {delay} seconds before retry...")
                    time.sleep(delay)
                else:
                    raise Exception(f"Unexpected command failure: {str(e)}")
    
